{{template "base" .}}

{{define "title"}}log{{end}}

{{define "content"}}
  {{template "header" .}}

  <div>
  {{range .Logs}}
    <div class="box">
      <div class="flex justify-between items-center">
        <div>
          <a href="{{.URL}}">{{.SummaryStr}}</a>
        </div>
        <div>
          {{.ShortID}}
        </div>
      </div>

      <div class="flex items-center">
        <span>{{.AuthorStr}}</span>
        <span>&nbsp;committed&nbsp;</span>
        <span>{{.WhenStr}}</span>
      </div>

      <div>
        <pre class="m-0">{{.Message}}</pre>
      </div>
    </div>
  {{end}}
  </div>
{{end}}
